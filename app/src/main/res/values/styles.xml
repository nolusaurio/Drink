<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="LoadingScreenTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">

        <item name="android:statusBarColor">@color/tarjetas</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>

    </style>



    <style name="alertdialog" parent="Base.Theme.AppCompat.Light.Dialog">

        <item name="android:textColor">#f3ef0e9d</item>

    </style>

    <style name="myswitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">#76ff03</item>
    </style>

</resources>
