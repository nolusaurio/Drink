<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/progressBack">

        <shape>

            <gradient android:startColor="@color/texto"
                android:centerColor="@color/texto"
                android:centerY="1.0"
                android:endColor="@color/texto"
                android:angle="0"/>

        </shape>

    </item>

    <item android:id="@+id/progressFront">

        <clip>

            <shape>

                <gradient android:startColor="#ccff90"
                    android:centerColor="#7cb342"
                    android:centerY="1.0"
                    android:endColor="#33691e"
                    android:angle="90"/>


                />

            </shape>

        </clip>

    </item>


</layer-list>